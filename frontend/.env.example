# Fantasy Football Frontend Environment Configuration Template
# Copy this file to .env and update the values as needed

# =========================
# API Configuration
# =========================

REACT_APP_API_URL=http://localhost:8000
REACT_APP_DEV_API_URL=http://localhost:8000
REACT_APP_PRODUCTION_API_URL=https://your-production-api.com
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# =========================
# Application Configuration
# =========================

REACT_APP_NAME=Fantasy Football Domination
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# =========================
# Feature Flags
# =========================

REACT_APP_ENABLE_DRAFT_TOOL=true
REACT_APP_ENABLE_TRADE_ANALYZER=true
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_NEWS_FEED=true
REACT_APP_ENABLE_ANALYTICS=true

# =========================
# Debug Configuration
# =========================

REACT_APP_DEBUG_MODE=true
REACT_APP_DEBUG_API_REQUESTS=true
REACT_APP_DEBUG_COMPONENTS=false

# =========================
# Platform Configuration
# =========================

REACT_APP_DEFAULT_PLATFORM=ESPN
REACT_APP_SUPPORTED_PLATFORMS=ESPN,Sleeper,Yahoo

# =========================
# Cache Configuration
# =========================

REACT_APP_CACHE_DURATION=300000
REACT_APP_ENABLE_CACHE=true

# =========================
# UI Configuration
# =========================

REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANIMATIONS=true

# =========================
# Development Tools
# =========================

REACT_APP_ENABLE_PROFILER=true
FAST_REFRESH=true
GENERATE_SOURCEMAP=true